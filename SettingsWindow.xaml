<Window x:Class="SlideShowBob.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App Settings"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextPrimaryBrush}">
    
    <Window.Resources>
        <!-- Theme resources are defined globally in App.xaml -->

        <Style TargetType="ScrollViewer">
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- ===== Global text style ===== -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        </Style>
        
        <!-- ===== Modern CheckBox style - Blue when checked ===== -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="CheckBoxBorder"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource SubtleBorderBrush}"
                                    BorderThickness="1"
                                    Width="18"
                                    Height="18"
                                    CornerRadius="2"
                                    VerticalAlignment="Center">
                            </Border>
                            <Path x:Name="CheckMark"
                                  Data="M 3,7 L 6,10 L 12,4"
                                  Stroke="{StaticResource TextPrimaryBrush}"
                                  StrokeThickness="2"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  Fill="Transparent"
                                  Visibility="Collapsed"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                            <ContentPresenter Content="{TemplateBinding Content}"
                                            Margin="26,0,0,0"
                                            VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="{StaticResource HoverOverlayBrush}"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{StaticResource SubtleBorderStrongBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="{StaticResource AccentBrushHover}"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{StaticResource AccentBrushHover}"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
                                <Setter TargetName="CheckBoxBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ===== Modern Button style - No border, hover background ===== -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background"
                                        Value="{StaticResource HoverOverlayBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background"
                                        Value="{StaticResource ControlBackgroundPressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox and ComboBoxItem styles are defined globally in App.xaml -->
        <!-- Specific ComboBoxItem style for Settings window to override hover color -->
        <!-- Must be defined BEFORE the ComboBox style that references it -->
        <Style x:Key="SettingsComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{StaticResource SurfaceAltBrush}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <Border.Resources>
                                <!-- Force override system colors in Border to prevent #BCDDEE -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#0E1524"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HotTrackBrushKey}" Color="#0E1524"/>
                            </Border.Resources>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- Explicitly set hover color to override any system defaults -->
                                <Setter TargetName="Border" Property="Background" Value="#0E1524"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource RaisedBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource RaisedHoverBrush}"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <!-- Force override system colors to prevent #BCDDEE hover color -->
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#0E1524"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HotTrackBrushKey}" Color="#0E1524"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#0E1524"/>
            </Style.Resources>
        </Style>
        
        <!-- Override width for Settings window ComboBox -->
        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="MaxWidth" Value="140"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource SettingsComboBoxItemStyle}"/>
        </Style>
        
        <!-- Info Icon Style - Circle with I -->
        <Style x:Key="InfoIconStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="â“˜"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Help"/>
            <Setter Property="ToolTipService.InitialShowDelay" Value="200"/>
            <Setter Property="ToolTipService.BetweenShowDelay" Value="0"/>
            <Setter Property="ToolTipService.ShowDuration" Value="30000"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Background="{StaticResource WindowBackdropBrush}" Margin="0">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Save Settings" 
                           FontSize="20" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Control which settings are saved between sessions. When disabled, the setting will revert to its default value when the app restarts."
                           TextWrapping="Wrap"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="13"
                           LineHeight="20"/>
            </StackPanel>
            
            <!-- Content with grouped sections -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="0,0,0,24">
                <StackPanel>
                    
                    <!-- General Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="General"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <!-- Save Folder Paths -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Save Folder Paths"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="When enabled, the app remembers which folders you've added to the slideshow. When disabled, folders will be cleared on app restart."
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>
                            <CheckBox x:Name="SaveFolderPathsCheckBox"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding SaveFolderPaths, Mode=TwoWay}"/>
                        </Grid>
                        
                        <!-- Save Mute State -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Save Mute State"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="When enabled, the app remembers whether audio is muted. When disabled, audio will default to muted on app restart."
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>
                            <CheckBox x:Name="SaveIsMutedCheckBox"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding SaveIsMuted, Mode=TwoWay}"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Slideshow Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Slideshow"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <!-- Save Slide Delay -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Save Slide Delay"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="When enabled, the app remembers the time delay between slides. When disabled, the delay will reset to 2 seconds on app restart."
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>
                            <CheckBox x:Name="SaveSlideDelayCheckBox"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding SaveSlideDelay, Mode=TwoWay}"/>
                        </Grid>
                        
                        <!-- Save Sort Mode -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Save Sort Mode"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="When enabled, the app remembers how media items are sorted (by name, date, etc.). When disabled, sorting will reset to alphabetical on app restart."
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>
                            <CheckBox x:Name="SaveSortModeCheckBox"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding SaveSortMode, Mode=TwoWay}"/>
                        </Grid>
                        
                        <!-- Toolbar Inactivity Behavior -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Toolbar Inactivity Behavior"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="Controls what happens to the toolbar when you're not interacting with it. Options: Dim (fade to semi-transparent), Disappear (hide completely), or Do Nothing (stay visible)."
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>
                            <ComboBox x:Name="ToolbarInactivityBehaviorComboBox"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left">
                                <ComboBoxItem Content="Dim" Tag="Dim"/>
                                <ComboBoxItem Content="Disappear" Tag="Disappear"/>
                                <ComboBoxItem Content="Do Nothing" Tag="Nothing"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Videos Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Videos"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <!-- Save Include Videos -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Save Include Videos (GIF/MP4)"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="When enabled, the app remembers whether video files (GIF and MP4) are included in the slideshow. When disabled, videos will be excluded by default on app restart."
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>
                            <CheckBox x:Name="SaveIncludeVideosCheckBox"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding SaveIncludeVideos, Mode=TwoWay}"/>
                        </Grid>
                        
                        <!-- Use FFMPEG for Video Processing -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Use FFMPEG for Video Processing"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="When enabled, uses FFMPEG for better video playback and thumbnail generation. Requires FFMPEG to be installed and configured. Check the status indicator below to verify."
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>
                            <CheckBox x:Name="UseFfmpegForPlaybackCheckBox"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding UseFfmpegForPlayback, Mode=TwoWay}"/>
                        </Grid>
                        
                        <!-- FFMPEG Status Indicator -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="FFMPEG Status"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="Shows whether FFMPEG is currently active and available for video processing."
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>
                            <TextBlock x:Name="FfmpegStatusTextBlock"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      FontSize="13"
                                      FontWeight="Medium"
                                      Text="{Binding FfmpegStatusText}"
                                      Foreground="{Binding FfmpegStatusForeground}"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Appearance Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Appearance"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <!-- Portrait Blur Effect -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Portrait Blur Effect"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="When enabled, applies a blur effect to portrait-oriented images to create a more visually appealing display. This helps fill the screen better when showing vertical images on a horizontal display."
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>
                            <CheckBox x:Name="PortraitBlurEffectCheckBox"
                                      Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      IsChecked="{Binding PortraitBlurEffect, Mode=TwoWay}"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Display Section -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Display"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <!-- Preferred Fullscreen Monitor -->
                        <Grid Margin="0,0,0,16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Preferred fullscreen monitor"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0"/>
                                <TextBlock Style="{StaticResource InfoIconStyle}">
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <TextBlock Text="Select which monitor to use for fullscreen mode. If none is selected, the last used monitor will be used."
                                                       TextWrapping="Wrap"
                                                       MaxWidth="300"/>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>
                            <ComboBox x:Name="PreferredMonitorComboBox"
                                      Grid.Column="1"
                                      Grid.Row="0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      MinWidth="200"
                                      DisplayMemberPath="DisplayName"
                                      SelectedValuePath="DeviceName"/>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="If none is selected, the last used monitor will be used."
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,8,0,0"
                                       TextWrapping="Wrap"/>
                        </Grid>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="SaveButton"
                        Content="Save"
                        Command="{Binding SaveCommand}"/>
                <Button Content="Cancel"
                        IsCancel="True"
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

