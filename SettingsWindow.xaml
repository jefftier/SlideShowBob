<Window x:Class="SlideShowBob.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App Settings"
        Height="450"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextPrimaryBrush}">
    
    <Window.Resources>
        <!-- Theme resources and ScrollBar style are defined globally in App.xaml -->

        <Style TargetType="ScrollViewer">
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- ===== Global text style ===== -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable"/>
        </Style>
        
        <!-- ===== Modern CheckBox style - Blue when checked ===== -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="CheckBoxBorder"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource SubtleBorderBrush}"
                                    BorderThickness="1"
                                    Width="18"
                                    Height="18"
                                    CornerRadius="2"
                                    VerticalAlignment="Center">
                            </Border>
                            <Path x:Name="CheckMark"
                                  Data="M 3,7 L 6,10 L 12,4"
                                  Stroke="White"
                                  StrokeThickness="2"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  Fill="Transparent"
                                  Visibility="Collapsed"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                            <ContentPresenter Content="{TemplateBinding Content}"
                                            Margin="26,0,0,0"
                                            VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="{StaticResource ControlBackgroundHoverBrush}"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{StaticResource SubtleBorderStrongBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ===== Modern Button style - No border, hover background ===== -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background"
                                        Value="{StaticResource ControlBackgroundHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background"
                                        Value="{StaticResource ControlBackgroundPressedBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox and ComboBoxItem styles are defined globally in App.xaml -->
        <!-- Override width for Settings window ComboBox -->
        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="MaxWidth" Value="140"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="{StaticResource WindowBackdropBrush}" Margin="0">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Save Settings" 
                           FontSize="20" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                
                <TextBlock Text="Control which settings are saved between sessions. When disabled, the setting will revert to its default value when the app restarts."
                           TextWrapping="Wrap"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="13"
                           LineHeight="20"/>
            </StackPanel>
            
            <!-- Content with 2-column layout -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Row 0: Save Slide Delay -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Save Slide Delay"
                               VerticalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <CheckBox x:Name="SaveSlideDelayCheckBox"
                              Grid.Row="0" Grid.Column="1"
                              VerticalAlignment="Center"
                              Margin="0,0,0,12"
                              HorizontalAlignment="Left"/>
                    
                    <!-- Row 1: Save Include Videos -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Save Include Videos (GIF/MP4)"
                               VerticalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <CheckBox x:Name="SaveIncludeVideosCheckBox"
                              Grid.Row="1" Grid.Column="1"
                              VerticalAlignment="Center"
                              Margin="0,0,0,12"
                              HorizontalAlignment="Left"/>
                    
                    <!-- Row 2: Save Sort Mode -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Save Sort Mode"
                               VerticalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <CheckBox x:Name="SaveSortModeCheckBox"
                              Grid.Row="2" Grid.Column="1"
                              VerticalAlignment="Center"
                              Margin="0,0,0,12"
                              HorizontalAlignment="Left"/>
                    
                    <!-- Row 3: Save Mute State -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Save Mute State"
                               VerticalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <CheckBox x:Name="SaveIsMutedCheckBox"
                              Grid.Row="3" Grid.Column="1"
                              VerticalAlignment="Center"
                              Margin="0,0,0,12"
                              HorizontalAlignment="Left"/>
                    
                    <!-- Row 4: Save Folder Paths -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Save Folder Paths"
                               VerticalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <CheckBox x:Name="SaveFolderPathsCheckBox"
                              Grid.Row="4" Grid.Column="1"
                              VerticalAlignment="Center"
                              Margin="0,0,0,12"
                              HorizontalAlignment="Left"/>
                    
                    <!-- Row 5: Toolbar Inactivity Behavior -->
                    <TextBlock Grid.Row="5" Grid.Column="0"
                               Text="Toolbar Inactivity Behavior"
                               VerticalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <ComboBox x:Name="ToolbarInactivityBehaviorComboBox"
                              Grid.Row="5" Grid.Column="1"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              Margin="0,0,0,12">
                        <ComboBoxItem Content="Dim" Tag="Dim"/>
                        <ComboBoxItem Content="Disappear" Tag="Disappear"/>
                        <ComboBoxItem Content="Do Nothing" Tag="Nothing"/>
                    </ComboBox>
                    
                    <!-- Row 6: Portrait Blur Effect -->
                    <TextBlock Grid.Row="6" Grid.Column="0"
                               Text="Portrait Blur Effect"
                               VerticalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <CheckBox x:Name="PortraitBlurEffectCheckBox"
                              Grid.Row="6" Grid.Column="1"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              Margin="0,0,0,12"/>
                    
                    <!-- Row 7: Use FFMPEG for Playback -->
                    <TextBlock Grid.Row="7" Grid.Column="0"
                               Text="Use FFMPEG for Video Processing"
                               VerticalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <CheckBox x:Name="UseFfmpegForPlaybackCheckBox"
                              Grid.Row="7" Grid.Column="1"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              Margin="0,0,0,12"
                              Checked="UseFfmpegForPlaybackCheckBox_Changed"
                              Unchecked="UseFfmpegForPlaybackCheckBox_Changed"/>
                    
                    <!-- Row 8: FFMPEG Status Indicator -->
                    <TextBlock Grid.Row="8" Grid.Column="0"
                               Text="FFMPEG Status"
                               VerticalAlignment="Center"
                               Margin="0,0,0,0"/>
                    <TextBlock x:Name="FfmpegStatusTextBlock"
                              Grid.Row="8" Grid.Column="1"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Left"
                              FontSize="13"
                              Margin="0,0,0,0"/>
                </Grid>
            </ScrollViewer>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button x:Name="SaveButton"
                        Content="Save"
                        Click="SaveButton_Click"/>
                <Button Content="Cancel"
                        IsCancel="True"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

